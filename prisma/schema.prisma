generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  idx        Int       @id @default(autoincrement())
  memberId   String?   @default("아이디") @map("member_id") @db.VarChar(45)
  subject    String?   @default("투두리스트 제목") @db.VarChar(45)
  content    String?   @default("투두리스트 내용") @db.VarChar(45)
  finish     String?   @default("투두리스트 완료여부") @db.VarChar(45)
  startDate  DateTime? @map("start_date") @db.Date
  finishDate DateTime? @map("finish_date") @db.Date

  @@map("todo")
}

model Blog {
  idx      Int       @id @default(autoincrement())
  memberId String?   @map("member_id") @db.VarChar(45)
  subject  String?   @default("블로그 제목") @db.VarChar(255)
  content  String?   @db.Text
  date     DateTime? @db.Date

  @@map("blog")
}

model Diary {
  idx      Int       @id @default(autoincrement())
  memberId String?   @default("아이디") @map("member_id") @db.VarChar(45)
  subject  String?   @default("일기제목") @db.VarChar(255)
  content  String?   @db.Text
  date     DateTime? @db.Date

  @@map("diary")
}

model Member {
  idx      Int    @id @default(autoincrement())
  id       String @default("아이디") @db.VarChar(45)
  password String @default("비밀번호") @db.VarChar(45)
  nickname String @default("닉네임") @db.VarChar(45)
  job      String @default("직업") @db.VarChar(45)
  jobInfo  String @default("직업소개") @map("job_info") @db.VarChar(255)
  myBadge  String @default("내소개") @map("my_badge") @db.VarChar(255)

  @@map("member")
}
