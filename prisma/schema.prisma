generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Todo 테이블
model Todo {
  idx        Int       @id @default(autoincrement())
  memberId   String?   @map("member_id") @db.VarChar(45)
  subject    String?   @db.VarChar(45)
  content    String?   @db.VarChar(45)
  finish     String?   @db.VarChar(45)
  startDate  DateTime? @map("start_date") @db.Date
  finishDate DateTime? @map("finish_date") @db.Date

  @@map("todo")
}

// Blog 테이블
model Blog {
  idx       Int       @id @default(autoincrement())
  memberId  String?   @map("member_id") @db.VarChar(45)
  subject   String?   @db.VarChar(45)
  content   String?   @db.Text
  date      DateTime? @db.Date

  @@map("blog")
}

// Diary 테이블
model Diary {
  idx       Int       @id @default(autoincrement())
  memberId  String?   @map("member_id") @db.VarChar(45)
  subject   String?   @db.VarChar(45)
  content   String?   @db.Text
  date      DateTime? @db.Date

  @@map("diary")
}

// Member 테이블
model Member {
  idx       Int     @id @default(autoincrement())
  id        String  @db.VarChar(45)
  password  String  @db.VarChar(45)
  nickname  String  @db.VarChar(45)
  job       String  @db.VarChar(45)
  jobInfo   String  @map("job_info") @db.VarChar(255)
  myBadge   String  @map("my_badge") @db.VarChar(255)

  @@map("member")
}